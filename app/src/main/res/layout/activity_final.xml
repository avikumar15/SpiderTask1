<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Final"
    android:id="@+id/rl"
    android:onClick="grav"
    >

    <ImageView
        android:id="@+id/t"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shape3"
        android:textColor="#fff"
        />

    <ImageView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_shape1"
        android:textColor="#fff"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/t"
        />

    <ImageView
        android:id="@+id/t3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shape"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/t1"
        />


    <ImageView
        android:id="@+id/t4"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_shape2"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/t3"
        />

    <ImageView
        android:id="@+id/t5"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shape4"
        android:textColor="#fff"
        android:layout_toRightOf="@+id/t4"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quit"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:text="GO BACK"
        android:onClick="quit"
        />

</RelativeLayout>